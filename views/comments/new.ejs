<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/forms.css">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 text-center form-section">
            <h1 class="mb-5">Share your memories of <%= player.name %></h1>
            <form action="/players/<%= player._id %>/comments" method="POST">
                <div class="mb-4 form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Type your text here..."></textarea>
                </div>
                <div class="mb-4 form-group">
                    <button class="btn btn-sm btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>



