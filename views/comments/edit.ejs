<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/forms.css">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 text-center form-section">
            <h1 class="mb-5">Edit Your Memory</h1>
            <form action="/players/<%= player_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="mb-4 form-group">
                    <textarea class="form-control" name="comment[text]" value="<%= comment.text %>"><%= comment.text %></textarea>
                </div>
                <div class="mb-4 form-group">
                    <button class="btn btn-sm btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>

